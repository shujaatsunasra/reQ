# ===========================================
# FloatChat Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# -----------------
# LLM Configuration
# -----------------
# Primary: Groq (fast, free tier available)
# Fallback: HuggingFace (slower, more options)
GROQ_API_KEY=
HUGGINGFACE_API_KEY=

# Legacy providers (optional, for backwards compatibility)
GEMINI_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# -----------------
# Supabase Database
# -----------------
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Direct PostgreSQL connection (for migrations)
DATABASE_URL=

# -----------------
# Redis Cache
# -----------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# -----------------
# ChromaDB Vector Store
# -----------------
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_COLLECTION=floatchat_embeddings

# -----------------
# RabbitMQ Message Queue
# -----------------
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_QUEUE=floatchat_tasks

# -----------------
# API Configuration
# -----------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# -----------------
# Security
# -----------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Encryption key for local storage (frontend)
ENCRYPTION_KEY=your-256-bit-encryption-key

# -----------------
# MCP Servers
# -----------------
MCP_STRUCTURED_URL=http://localhost:8010
MCP_METADATA_URL=http://localhost:8011
MCP_PROFILE_URL=http://localhost:8012
MCP_SEMANTIC_URL=http://localhost:8013
MCP_CACHE_URL=http://localhost:8014
MCP_VISUALIZATION_URL=http://localhost:8015

# -----------------
# Monitoring
# -----------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=floatchat

# ELK Stack
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_URL=http://localhost:5601

# -----------------
# ARGO Data Source
# -----------------
# GDAC server URL for fetching ARGO float data
GDAC_URL=https://data-argo.ifremer.fr

# Enable demo mode (uses generated demo data instead of real data)
# Automatically enabled when database is not configured
DEMO_MODE=false

# -----------------
# Feature Flags
# -----------------
ENABLE_NEURAL_SECURITY=true
ENABLE_LLM_ARBITRATION=true
ENABLE_MEMORY_SYSTEMS=true
ENABLE_ITERATIVE_REFINEMENT=true

# -----------------
# Development
# -----------------
DEBUG=false
LOG_LEVEL=INFO
